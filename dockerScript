// set local environment
eval "$(docker-machine env default)"

// Create docker image
docker build -t briangallagher/nodeloadtest:v11 .

// Push to docker hub
docker push briangallagher/nodeloadtest

// Push to Kuberntes

// Run a container from my own Docker Hub account
kubectl run nodeloadtest --image=briangallagher/nodeloadtest:v11 --port=8001
// expose the deployment
kubectl expose deployment nodeloadtest --type="NodePort"
